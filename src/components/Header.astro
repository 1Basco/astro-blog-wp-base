---
export interface Props {
  current?: string;
}

const { current = "" } = Astro.props;
---

<header class="bg-gray-800">
  <div class="container mx-auto flex items-center justify-between py-4">
    <div class="text-left">
      <a href="#">
        <img src="logo.svg" alt="Logo" />
      </a>
    </div>
    <div class="text-right">
      <nav class="hidden md:flex">
        <a class={current === "blog" ? "selected" : ""} href="/">blog</a>
        <a class={current === "loja" ? "selected" : ""} href="/about">about</a>
        <a class={current === "jobs" ? "selected" : ""} href="/trabalhe-conosco"
          >vagas</a
        >
      </nav>
      <button
        class="md:hidden block px-3 py-2 text-white border border-white rounded-md"
        id="menu-toggle"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path></svg
        >
      </button>
    </div>
  </div>
</header>

<script>
  const toggleButton = document.getElementById(
    "menu-toggle"
  ) as HTMLButtonElement;
  const menu = document.querySelector("nav") as HTMLAnchorElement;

  toggleButton.addEventListener("click", () => {
    menu.classList.toggle("hidden");
  });
</script>

<style>
  a {
    color: #adadad;
    text-decoration: none;
    padding: 10px 5px;
    display: block;
    position: relative;
    margin-left: 20px;
    min-width: 70px;
    text-align: center;
    font-weight: 600;
  }
  a:not(.selected) {
    opacity: 0.7;
    font-weight: 500;
  }
  a::before {
    content: "";
    position: absolute;
    transition: transform 0.3s ease;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 2px;
    background: var(--text-secondary);
    transform: scaleX(0);
  }
  a:hover::before,
  .selected::before {
    transform: scaleX(1);
  }
  .selected::before {
    background: var(--primary-color);
  }
</style>
